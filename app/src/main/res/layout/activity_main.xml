<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headingTV"
        android:text="@string/user_input_app"
        android:gravity="center_vertical|center_horizontal"
        android:padding="20dp"
        android:textSize="19sp"
        android:background="@color/colorHeadingBg"
        android:textColor="@color/colorWhite"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputOneET"
        android:layout_below="@id/headingTV"
        android:hint="@string/hint_text"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="number"
        android:maxLength="5"
        android:background="@drawable/my_border"
        android:padding="10dp"
        android:textColorHint="@color/colorHeadingBg"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="5dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputTwoET"
        android:layout_below="@id/inputOneET"
        android:hint="@string/hint_text"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="textPassword"
        android:background="@drawable/my_border"
        android:padding="10dp"
        android:textColorHint="@color/colorHeadingBg"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="5dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showBtn"
        android:layout_below="@id/inputTwoET"
        android:text="@string/show_input_btn"
        android:layout_marginTop="5dp"
        android:layout_centerInParent="true"
        android:background="@color/colorHeadingBg"
        android:textColor="@color/colorWhite"
        android:padding="10dp"
        android:onClick="checkInput"
        />



</RelativeLayout>